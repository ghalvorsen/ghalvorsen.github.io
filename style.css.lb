html {
	max-width: 600px;
	margin-left: auto;
	margin-right: auto;
	margin-top: 30px;
	color: #333;
	padding-bottom: 200px;
	 }

p            	{font: 18px Helvetica; padding-top: 10px;}
p.italic     	{font: 18px Helvetica; font-style: italic;}
a 		{color: royalblue; }
a:hover		{color: lightblue; }

.entry {
	border-left: 10px solid darkslategray;
	padding: 0px 10px 0px 10px;
	border-radius: 0 30px 30px 0;
	margin-bottom: 20px;
	background-color: #eee;
	}

.entry h2 { margin: 5px auto 2px auto; }
